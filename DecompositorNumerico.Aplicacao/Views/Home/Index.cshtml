@{
    ViewData["Title"] = "Home Page";
}

<div class="text-justify">
        <div class="form-group">
            <div class="col-sm-6">
                <input id="idValor" type="number" class="form-control" min="0" placeholder="Informe um número:" />
                <br />
                @Html.ActionLink("Calcular", "Calcular", "Home", new { valor = "XXX" }, new { @id = "btnCalcular", @class = "btn btn-primary" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-6">
                <h3>Divisores:</h3>
                <input type="number" class="form-control" id="idDivisores">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-6">
                <h3>Divisores Primos:</h3>
                <input type="number" class="form-control" id="idPrimos">
            </div>
        </div>

</div>


<script>

    setTimeout(function () {
        $("#btnCalcular").click(function () {
            var novoValor = $("#idValor").val();
            this.href = this.href.replace("XXX", novoValor);
        });
    }, 10);


</script>
